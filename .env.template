# ============================
# AZURE AUTHENTICATION
# ============================
AZURE_CLIENT_ID=YOUR_AZURE_CLIENT_ID_HERE
AZURE_CLIENT_SECRET=YOUR_AZURE_CLIENT_SECRET_HERE  # For service principal auth
AZURE_TENANT_ID=YOUR_AZURE_TENANT_ID_HERE

# ============================
# AZURE AI FOUNDRY / OPENAI
# ============================
AZURE_OPENAI_ENDPOINT=https://your-foundry-instance.openai.azure.com/
AZURE_OPENAI_API_KEY=YOUR_AZURE_OPENAI_API_KEY_HERE
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-small
AZURE_OPENAI_EMBEDDING_MODEL=text-embedding-3-small
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# ============================
# AZURE AI SEARCH
# ============================
AZURE_SEARCH_SERVICE_NAME=your-search-service-name
AZURE_SEARCH_ENDPOINT=https://your-search-service-name.search.windows.net
AZURE_SEARCH_API_KEY=YOUR_AZURE_SEARCH_API_KEY_HERE
AZURE_SEARCH_INDEX_NAME=microsoft-docs

# ============================
# AZURE COSMOS DB
# ============================
AZURE_COSMOS_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
AZURE_COSMOS_KEY=YOUR_AZURE_COSMOS_KEY_HERE
AZURE_COSMOS_DATABASE_NAME=aiarchitect
AZURE_COSMOS_CONTAINER_NAME=architectures

# ============================
# AZURE STORAGE
# ============================
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account-name
AZURE_STORAGE_CONNECTION_STRING="DefaultEndpointsProtocol=https;AccountName=your-account;AccountKey=YOUR_KEY_HERE;EndpointSuffix=core.windows.net"

# ============================
# APPLICATION CONFIGURATION
# ============================
USE_ENHANCED_RAG=true
DEBUG=false
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
AZURE_SUBSCRIPTION_ID=YOUR_AZURE_SUBSCRIPTION_ID_HERE

